# Next.js + FastAPI Docker Stack Environment Variables
# Copy this file to .env and modify the values as needed

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NODE_ENV=development

# Backend Configuration
PYTHONPATH=/app
PYTHONUNBUFFERED=1
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development

# Development Settings
WATCHPACK_POLLING=true

# Production Settings (uncomment for production)
# NODE_ENV=production
# ENVIRONMENT=production
# NEXT_PUBLIC_API_URL=https://your-domain.com/api

# Database Configuration (uncomment as needed)
# DATABASE_URL=postgresql://user:password@localhost:5432/myapp
# REDIS_URL=redis://localhost:6379

# Authentication (uncomment as needed)
# JWT_SECRET=your-secret-key
# JWT_EXPIRATION=24h

# CORS Settings (uncomment for production)
# ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Logging
# LOG_LEVEL=INFO
# LOG_FORMAT=json

# File Upload
# MAX_FILE_SIZE=10MB
# UPLOAD_DIR=/app/uploads

# Rate Limiting
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_WINDOW=60

# Monitoring (uncomment as needed)
# SENTRY_DSN=your-sentry-dsn
# PROMETHEUS_ENABLED=true

# Email Configuration (uncomment as needed)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-password

# External APIs (add your API keys here)
# OPENAI_API_KEY=your-openai-key
# STRIPE_SECRET_KEY=your-stripe-key
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
